<body style="background-image: url('https://images.unsplash.com/photo-1521464302861-ce943915d1c3?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1951&q=80');">
<h2 class="text-center py 10" style="color: white;">Select your dates</h2>

<div class="modal-card mx-auto text-center" style="width: 600px; padding: 20px; margin: 20px; text-decoration-color: black">
<%= simple_form_for [@flat, @booking] do |f| %>
  <%= f.input :checkin_date, as: :string, required: false, input_html: {id: "range_start" } %>
  <%= f.input :checkout_date, as: :string, required: false, input_html: {id: "range_end" } %>
  <%= f.button :submit %>
<% end %>
<%= link_to "Back", dashboard_path, class: 'btn btn-light mx-2' %>
</div>
</body>
