<body style="background-image: url('https://images.unsplash.com/photo-1521464302861-ce943915d1c3?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1951&q=80');">
<h2 class="text-center py 10" style="color: white;">Add your own flat</h2>

<div class="modal-card mx-auto text-center" style="width: 600px; padding: 20px; margin: 20px; text-decoration-color: black">
<%= simple_form_for @flat do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :daily_price %>
  <%= f.input :features %>
  <%= f.button :submit %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
<% end %>
<%= link_to "Back", flats_path, class: 'btn btn-light mx-2 justify-content-center text-center' %>
</div>
</body>
