<div class="modal-card">
<%= simple_form_for @flat do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :daily_price %>
  <%= f.input :features %>
  <%= f.button :submit %>
<% end %>
<%= link_to "Back", flats_path, class: 'btn btn-light mx-2 justify-content-center text-center' %>
</div>
